<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane managed="true" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <FlowPane hgap="10.0">
            <children>
                <Label text="%tab.registrations.label.search" />
                <TextField prefWidth="300.0" />
                <Button mnemonicParsing="false" text="%tab.registrations.button.search" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </FlowPane>
    </top>
    <center>
        <ScrollPane>
            <content>
                <AnchorPane>
                    <children>
                        <TableView>
                            <columns>
                                <TableColumn text="Name" />
                                <TableColumn text="Price" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
            <BorderPane.margin>
                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </ScrollPane>
    </center>
    <bottom>
        <FlowPane alignment="CENTER_RIGHT">
            <children>
                <Button mnemonicParsing="false" text="%tab.registrations.button.new" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </FlowPane>
    </bottom>
</BorderPane>
